{
  "openapi": "3.0.0",
  "info": {
    "title": "Yhoty User API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:1001",
      "description": "Local server"
    },
    {
      "url": "https://yhoty.vercel.app",
      "description": "Live server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  },
  "tags": [
    {
      "name": "~~~~~~ User ~~~~~~"
    },
    {
      "name": "Auth"
    },
    {
      "name": "Profile"
    },
    {
      "name": "Setting"
    },
    {
      "name": "Report"
    },
    {
      "name": "Card"
    },
    {
      "name": "Wallet"
    },
    {
      "name": "Country"
    },
    {
      "name": "~~~~~~ Common ~~~~~~"
    },
    {
      "name": "Otp"
    },
    {
      "name": "Forgot Password"
    }
  ],
  "paths": {
    "/v1/user/auth/signUp": {
      "post": {
        "tags": ["Auth"],
        "summary": "Sign Up",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "fullName": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "countryCode": {
                    "type": "number",
                    "example": "+91"
                  },
                  "phoneNumber": {
                    "type": "integer"
                  },
                  "dob": {
                    "type": "string"
                  },
                  "gender": {
                    "type": "string",
                    "enum": ["Male", "Female", "Other"]
                  },
                  "address1": {
                    "type": "string"
                  },
                  "address2": {
                    "type": "string"
                  },
                  "country": {
                    "type": "string"
                  },
                  "state": {
                    "type": "string"
                  },
                  "city": {
                    "type": "string"
                  },
                  "zipCode": {
                    "type": "integer"
                  },
                  "profilePicture": {
                    "type": "string",
                    "format": "binary"
                  },
                  "documentType": {
                    "type": "string",
                    "enum": ["Passport", "Driving Licence", "ID Card"]
                  },
                  "document_front": {
                    "type": "string",
                    "format": "binary"
                  },
                  "document_back": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "noauthAuth": []
          }
        ],
        "responses": {
          "201": {
            "description": "An OTP has been sent to your email address. Please check your inbox and use the OTP to proceed.",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/v1/user/auth/logIn": {
      "post": {
        "tags": ["Auth"],
        "summary": "Log In",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {
                  "email": "String",
                  "password": "String"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "201": {
            "description": "An OTP has been sent to your email address. Please check your inbox and use the OTP to proceed.",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/v1/user/auth/verifyOtp": {
      "post": {
        "tags": ["Auth"],
        "summary": "Verify Otp",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {
                  "email": "String",
                  "otp": "Number"
                }
              }
            }
          }
        },
        "security": [
          {
            "noauthAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "You have logged in successfully.",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
